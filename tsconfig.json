{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@lib/*": ["./lib/*"],
      "@components/*": ["./components/*"],
      "@providers/*": ["./providers/*"],
      "@prisma": ["./prisma/*"],
      "@actions": ["./actions/*"],
      "@hooks": ["./hooks/*"],
      "@constants": ["./constants/*"],
      "@auth": ["./lib/auth/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "lib/menuts",
    "generateEnv.js"
  ],
  "exclude": ["node_modules"]
}
